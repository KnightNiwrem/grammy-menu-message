{
  "lock": false,
  "tasks": {
    "check": "deno check --allow-import src/mod.ts",
    "test": "deno test --allow-all",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "ok": "deno task fmt && deno task lint && deno task test && deno task check"
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 120,
    "proseWrap": "preserve"
  }
}
